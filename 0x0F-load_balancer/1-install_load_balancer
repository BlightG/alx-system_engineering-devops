#!/usr/bin/env bash
# configures a load balancer to to use a roundrobin algorithm
# to decide between two servers

sudo apt-get -y install --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.7
sudo apt-get -y update

sudo apt-get -y install haproxy=2.7.\*
sudo sed -i -e '$aENABLED=1\n' /etc/default/haproxy
sudo sed -i -e '$a\listen http-in\n\tbind :80\n\tbalance roundrobin\n\tserver 14492-web-01 3.89.146.205:80 check\n\tserver 14492-web-02 54.88.206.128:80 check\n' /etc/haproxy/haproxy.cfg
sudo service haproxy restart
